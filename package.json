{
  "name": "nottalys",
  "version": "1.0.0",
  "description": "Site de chansons de mariage personnalis√©es",
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:eleventy": "eleventy --serve",
    "dev:tailwind": "tailwindcss -i ./src/css/input.css -o ./_site/css/output.css --watch",
    "build": "npm-run-all build:*",
    "build:tailwind": "tailwindcss -i ./src/css/input.css -o ./_site/css/output.css --minify",
    "build:eleventy": "eleventy"
  },
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "tailwindcss": "^3.4.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.33",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "alpinejs": "^3.13.5"
  }
}