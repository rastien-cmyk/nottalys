    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content="Un couple de mariés, illustrant le service de chanson personnalisée Nottalys assisté par l'IA" />
    <meta property="og:url" content="https://nottalys.com{{ page.url }}" />

    <link rel="preload" as="image" href="/media/images/hero.webp">
    <link rel="canonical" href="https://nottalys.com{{ page.url }}" />

