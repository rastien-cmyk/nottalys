<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ metaTitle }}</title>
    <meta name="description" content="{{ metaDesc }}">

    <meta property="og:title" content="{{ metaTitle }}" />
    <meta property="og:description" content="{{ metaDesc }}" />
    <meta property="og:type" content="website" />    
    <meta property="og:image" content="https://nottalys.com/media/images/chanson-mariage-personnalisee-ia-nottalys.png" />
    <meta property="og:url" content="https://nottalys.com{{ page.url }}" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Prata&family=DM+Sans:wght@300;400;500;700&display=swap" rel="stylesheet">
    
    <link rel="icon" type="image/svg+xml" href="/media/favicon.svg">
    <link rel="stylesheet" type="text/css" href="/css/output.css">
    <link rel="canonical" href="https://nottalys.com{{ page.url }}" />

    <!-- Alpine.js -->
