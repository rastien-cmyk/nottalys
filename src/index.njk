<script>
// Steps scroll avec Alpine.js
function stepsScroll() {
  return {
    hasLeft: false,
    hasRight: true,
    
    init() {
      this.updateGradients();
    },
    
    updateGradients() {
      const el = this.$refs.container;
      if (!el) return;
      
      const scrollLeft = el.scrollLeft;
      const maxScroll = el.scrollWidth - el.clientWidth;
      
      this.hasLeft = scrollLeft > 10;
      this.hasRight = scrollLeft < maxScroll - 10;
    }
  };
}
</script>